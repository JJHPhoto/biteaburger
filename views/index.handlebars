<header>

</header>

<main>
  <section>
    <h1> Burgers to eat!</h1>
    <div id="table">
      <div id="on-table">
        <ol>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ol>
      </div>
    </div>
  </section>

  <aside>
    <h2>Burgers eaten!</h2>
      <div id="eaten">
        <div id="eaten-burgers">
          <ol>
            {{#each burgers}}
              {{#if devoured}}
              <li>
                {{burger_name}}
                <button class="delete-button" data-id="{{id}}">Done with that!</button>
              </li>
              {{/if}}
            {{/each}}
          </ol>
        </div>
      </div>
  </aside>
</main>

<footer>
  <h3 id="make-burger-title">What burger would you like made?</h3>
  <form class="make-burger">
    <div class="form-info">
      <label for="burger">Request Burger:</label>
      <input type="text" id="burger" name="burger_name">
    </div>

    <button id="add-burger" type="submit">Make Burger</button>
  </form>
</footer>